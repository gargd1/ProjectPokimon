<div class="container py-4">
  <div class="row">
    <div class="col-md-6">
      <!-- Left column for search form -->
      <div class="pokemon-search p-3 bg-light rounded">
        <%= form_tag(pokemons_path, method: "get") do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Pokemon" %>
            <div class="input-group-append">
              <button type="submit" class="btn btn-primary">Search</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <!-- Right column for search results -->
      <div class="pokemon-results p-3 bg-light rounded">
        <% if @pokemons.present? %>
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @pokemons.each do |pokemon| %>
                <tr>
                  <td><%= pokemon.name %></td>
                  <td><%= link_to 'View Details', member_path(pokemon), class: 'btn btn-info' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="pagination-container">
            <%= paginate @pokemons %>
          </div>
        <% else %>
          <p class="text-muted">No data found</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
